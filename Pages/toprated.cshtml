@page
@model topratedModel
@{
    Layout = Layout;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Rated Films - Friday Film Club</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100">
    </header>

    <main class="container mx-auto mt-8">
        <!-- Top Rated Film Section -->
        <div class="bg-white p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Inception</h2>
            <div class="flex flex-col md:flex-row gap-6">
                <!-- Video Placeholder -->
                <picture>
                    <source srcset="/images/inception.jpg" type="image/svg+xml">
                    <img src="/images/inception.jpg" alt="/images/inception.jpg" style="height:140px" />
                </picture>
                <!-- Film Details -->
                <div class="flex-1">
                    <p class="text-sm text-gray-500 mb-2">2025 | 2h 28min | Action, Sci-Fi</p>
                    <p class="mb-4 text-gray-700">
                        A thief who steals corporate secrets through the use of dream-sharing technology is given the inverse task of planting an idea into the mind of a C.E.O.
                    </p>
                    <div class="grid grid-cols-3 text-sm gap-y-1">
                        <div class="font-medium">Director</div>
                        <div class="col-span-2">Christopher Nolan</div>

                        <div class="font-medium">Writers</div>
                        <div class="col-span-2">Christopher Nolan</div>

                        <div class="font-medium">Stars</div>
                        <div class="col-span-2">Leonardo DiCaprio, Joseph Gordon-Levitt, Ellen Page</div>
                    </div>
                </div>
                <!-- Ratings and Actions -->
                <div class="w-64 flex flex-col items-center">
                    <div class="text-4xl font-bold mb-2">8.8</div>
                    <div class="text-sm text-gray-500 mb-4">Based on 2.1M reviews</div>
                    <button class="w-full bg-blue-600 text-white py-2 px-4 rounded mb-2 hover:bg-blue-500">Rate This Movie</button>
                </div>
            </div>
        </div>

        <!-- Comments Section -->
        <div class="mt-8 bg-white p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-bold mb-4">Comments</h3>
            <form class="mb-6">
                <textarea class="w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                          rows="4"
                          placeholder="Write your comment..."></textarea>
                <button type="submit"
                        class="mt-2 bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-500">
                    Post Comment
                </button>
            </form>
            <!-- Example Comments -->
            <div class="space-y-4">
                <div class="flex items-start space-x-4">
                    <div class="w-10 h-10 rounded-full bg-gray-300"></div>
                    <div>
                        <p class="font-bold">John Doe <span class="text-sm text-gray-500">2 days ago</span></p>
                        <p>This movie is a masterpiece! The plot twists kept me on the edge of my seat.</p>
                    </div>
                </div>
                <div class="flex items-start space-x-4">
                    <div class="w-10 h-10 rounded-full bg-gray-300"></div>
                    <div>
                        <p class="font-bold">Jane Smith <span class="text-sm text-gray-500">1 week ago</span></p>
                        <p>The visual effects are incredible. Definitely worth watching in IMAX.</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
